IG_USERNAME=your_instagram_username
IG_PASSWORD=your_instagram_password

# WhatsApp targets
#
# CONTENT target: where Instagram posts/stories are forwarded to
WA_CONTENT_CONTACT_NAME=Your Friend Name
WA_CONTENT_PHONE=
#
# REPORT target: where personal reports go (unfollow alerts, etc.)
# Tip: you can set this to your own "Notes" chat in WhatsApp Web.
WA_REPORT_CONTACT_NAME=Notes
WA_REPORT_PHONE=

# Backward-compatible legacy vars (optional). If you already used these, you can keep them.
# WA_CONTACT_NAME=
# WA_PHONE=

# If WhatsApp Web opens a native macOS file picker for "Photos & videos",
# this tool may need Accessibility permissions to automate it.
# (System Settings -> Privacy & Security -> Accessibility)

# Message prefix (optional)
MESSAGE_PREFIX=New from Instagram:

